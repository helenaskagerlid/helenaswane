---
import { Image } from "astro:assets";
import removeMarkdown from "remove-markdown";

const { title, image, url, bio } = Astro.props;

const summary = (bio: string, length = 200): string => {
  const cleanText = removeMarkdown(bio, {
    useImgAltText: false,
  });
  if (cleanText.length <= length) return cleanText;
  return cleanText.substring(0, cleanText.lastIndexOf(" ", length)) + "...";
};
---

<article class="blog-post">
  <a class="blog-post-link" href={url}>
    <div class="image-wrapper">
      <Image
        class="blog-post-image"
        src={image}
        alt={title}
        width={314}
        height={314}
        format="webp"
        loading="lazy"
        style="object-fit: cover; width: 100%; height: 100%;"
      />
    </div>

    <div class="blog-post-description">
      <h3 class="blog-post-title">{title}</h3>
      <p class="blog-post-summary">{summary(bio)}</p>
    </div>
  </a>
</article>

<style>
  .blog-post {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: white;
    width: 100%;
    height: auto;
  }

  .blog-post-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    width: 100%;
  }

  .image-wrapper {
    width: 314px;
    height: 314px;
    padding-top: 25px;
    overflow: hidden;
  }

  .blog-post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .blog-post-description {
    padding: 25px;
  }

  .blog-post-title {
    font-size: 24px;
    margin: 0;
  }
</style>
