---
import { getEntry, render } from "astro:content";

const transformativCoachning = await getEntry(
  "transformativCoachning",
  "index"
);
if (!transformativCoachning) throw new Error("Could not find entry");
const { Content } = await render(transformativCoachning);
---

<section class="transformative-coaching" id="aboutCoachning">
  <div class="tc-wrapper section-inner">
    <h2 class="tc-heading">{transformativCoachning.data.title}</h2>
    <div class="text-wrapper">
      <Content />
      <button class="book-btn">Boka session</button>
    </div>
  </div>
</section>

<style>
  .transformative-coaching {
    width: 100vw;
    background-color: #faf6f1;
    /* background: linear-gradient(to bottom, #faf6f1 0%, #b86b95 100%); */
    padding-block: 100px;
    padding-block: 100px;
  }

  .tc-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .tc-heading {
    font-weight: 400;
    font-size: clamp(2rem, calc(1.2rem + 4.2vw), 3.5rem);
    text-transform: uppercase;
    color: #2b2929;
  }

  .text-wrapper {
    max-width: 600px;
    display: block;
    max-width: 600px;
    line-height: 1.6;
    color: #2b2929;
  }

  .book-btn {
    display: block;
    width: 150px;
    padding: 20px;
    border-radius: 8px;
    margin-left: auto;
    border: none;
    cursor: pointer;
  }
</style>
